{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "lib": [
      "es2017"
    ],
    "types": [
      "@types/node",
      "@types/jest"
    ],
    "paths": {
      "@api": [
        "api"
      ],
      "@models": [
        "models"
      ],
      "@routes": [
        "routes"
      ],
      "@handlers": [
        "handlers"
      ]
    }
  }
}
